﻿@using GoodsStore.ViewModels
@model UserViewModel


<section class="bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="media">
                    <div class="media-body">
                        <div class="mb-3">

                            <h1 class="h1 mb-2">Id: <br />@Model.Id</h1>
                            
                            <h2 class="h2 mb-2">Name: <br />@Model.UserName</h2>
                            <h2 class="h2 mb-2">Email: <br />@Model.Email</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>