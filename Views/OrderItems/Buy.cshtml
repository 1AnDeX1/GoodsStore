@model Products

<section class="bg-white space-sm">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mb-4 mb-sm-0">
                <img alt="Image" src="@Model.Image" class="rounded img-fluid" />
            </div>
            <div class="col-lg-4 d-flex flex-column justify-content-between mr-auto ml-auto">
                <div>
                    <h1 class="mb-2">@Model.Name</h1>
                    <h2>Опис:</h2>
                    <h3 class="lead mb-3">@Model.Description</h3>
                    <h2 class="lead mb-3">Ціна: @Model.Price грн</h2>
                    <h2 class="lead mb-3">Кількість: @Model.Quantity шт</h2>
                </div>
            </div>
            <form class="row g-3" method="post" asp-action="Buy">
                <div class="col-12">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" placeholder="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Купити</button>
                </div>
            </form>
        </div>
    </div>
</section>


