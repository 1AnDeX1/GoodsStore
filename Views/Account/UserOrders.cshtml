@using GoodsStore.Models
@model List<OrderItems>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Order id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <th scope="row">@order.Order.OrderID</th>
                                <td>@order.Product.Name</td>
                                <th scope="row">@order.Quantity</th>
                                <th scope="row">@order.Order.Status</th>

                                @if (order.Order.Status == "Not Done")
                                {
                                    <td>
                                        <a class="btn btn-danger" asp-controller="OrderItems" asp-action="Cancel" asp-route-id="@order.OrderID">
                                            Cancel
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
